<style>
  .page-header {
    text-align: center;
    font-size: 28px;
    font-weight: bold;
    color: #facc15;
    margin-bottom: 30px;
    text-shadow: 1px 1px 3px #000;
  }

  .form-wrapper {
    max-width: 600px;
    margin: 40px auto;
    padding: 30px;
    background: #2a2a2a;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
    border: 1px solid #444;
    color: #fff;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-group textarea {
    width: 100%;
    padding: 12px;
    background: #1f1f1f;
    border: 1px solid #555;
    border-radius: 8px;
    color: #f5f5f5;
    font-size: 16px;
  }

  .form-group textarea:focus {
    border-color: #facc15;
    box-shadow: 0 0 6px rgba(250, 204, 21, 0.3);
    outline: none;
  }

  .submit-button {
    background-color: #facc15;
    color: #000;
    font-weight: bold;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 16px;
  }

  .submit-button:hover {
    background-color: #ffd633;
  }

  .back-link {
    display: block;
    text-align: center;
    margin-top: 20px;
    color: #facc15;
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>

<div class="page-header">コメント編集ページ</div>

<div class="form-wrapper">
  <%= form_with(model: [@post, @comment], local: true) do |f| %>
    <div class="form-group">
      <%= f.label :content, "コメント入力欄" %>
      <%= f.text_area :body, rows: 5 %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "更新", class: "submit-button" %>
    </div>
  <% end %>

  <%= link_to "← 戻る", post_path(@post), class: "back-link" %>
</div>
