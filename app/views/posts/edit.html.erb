<style>
  body {
    background: linear-gradient(to bottom, #0d0d0d, #1a1a1a);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    color: #f5f5f5;
  }

  .container {
    width: 100%;
    max-width: 650px;
    margin: 60px auto;
    padding: 35px;
    background: #2a2a2a;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
    border: 1px solid #444;
  }

  .header {
    background: linear-gradient(90deg, #3b3054, #1a1a1a);
    padding: 20px;
    font-size: 28px;
    font-weight: bold;
    color: #facc15;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 30px;
    text-shadow: 1px 1px 5px #000;
  }

  .form-group {
    margin-bottom: 25px;
    text-align: left;
  }

  input[type="text"],
  textarea {
    width: 100%;
    padding: 12px 14px;
    font-size: 16px;
    border: 1px solid #555;
    border-radius: 8px;
    background-color: #1f1f1f;
    color: #f5f5f5;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  input[type="text"]:focus,
  textarea:focus {
    border-color: #facc15;
    box-shadow: 0 0 6px rgba(250, 204, 21, 0.3);
    outline: none;
  }

  textarea {
    height: 140px;
    resize: vertical;
  }

  .file-label {
    font-size: 14px;
    color: #ccc;
    margin-bottom: 8px;
    display: block;
  }

  input[type="file"] {
    color: #f5f5f5;
  }

  .submit-button {
    background-color: #facc15;
    border: none;
    color: #000;
    padding: 12px 25px;
    font-weight: bold;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .submit-button:hover {
    background-color: #ffd633;
    transform: translateY(-2px);
  }
</style>

<div class="container">
  <div class="header">投稿編集</div>

  <%= form_with model: @post, local: true, html: { multipart: true } do |form| %>
    <div class="form-group">
      <%= form.text_field :title, placeholder: "タイトルを入力してください" %>
    </div>

    <div class="form-group">
      <%= form.text_area :body, placeholder: "本文を入力してください" %>
    </div>

    <div class="form-group">
      <label class="file-label"><%= form.label :image, "画像をアップロード" %></label>
      <%= form.file_field :image %>
    </div>

    <div class="form-group">
      <%= form.submit "編集を保存", class: "submit-button" %>
    </div>
  <% end %>
</div>
