<style>
  body {
    background-color: #d3d3d3;
    font-family: sans-serif;
  }

  .header {
    background-color: #a0ded9;
    padding: 15px;
    font-size: 22px;
    font-weight: bold;
    color: #333;
    text-align: center;
    margin-bottom: 30px;
    border-bottom: 3px solid #6699cc;
  }

  .post-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .post-card {
    background-color: white;
    width: 200px;
    padding: 20px;
    box-shadow: 0 0 5px rgba(0,0,0,0.2);
    border-radius: 4px;
    text-align: left;
  }

  .post-title {
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 16px;
  }

  .post-meta {
    font-size: 14px;
    color: #333;
  }
</style>

<div class="header">投稿一覧ページ</div>

<div class="post-grid">
  <% @posts.each do |post| %>
    <div class="post-card">
      <div class="post-title">
        <%= link_to post.title, post_path(post) %>
      </div>
      <div class="post-meta">
        タイトル名<br>
        <%= post.user.name %>
      </div>
    </div>
  <% end %>
</div>
