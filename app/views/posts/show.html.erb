<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<% if @post.image.attached? %>
  <div>
    <%= image_tag @post.image %>
  </div>
<% end %>

<p>投稿者: <%= @post.user.name %></p>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post) %> |
  <%= link_to "削除", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>

<%= link_to "戻る", posts_path %>
