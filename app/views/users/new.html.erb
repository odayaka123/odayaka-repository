<style>
  body {
    background: radial-gradient(ellipse at center, #1c1c1c 0%, #0e0e0e 100%);
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    color: #f5f5f5;
  }

  .container {
    width: 100%;
    max-width: 450px;
    margin: 60px auto;
    padding: 30px 25px;
    background: #2a2a2a;
    border-radius: 14px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
    border: 1px solid #444;
  }

  .header {
    background: linear-gradient(90deg, #3b3054, #1a1a1a);
    padding: 18px;
    font-size: 26px;
    font-weight: bold;
    color: #facc15;
    border-radius: 10px;
    text-align: center;
    margin-bottom: 30px;
    text-shadow: 1px 1px 5px #000;
  }

  .form-group {
    margin-bottom: 22px;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 12px;
    font-size: 15px;
    border: 1px solid #555;
    border-radius: 8px;
    background-color: #1f1f1f;
    color: #f5f5f5;
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  input[type="text"]:focus,
  input[type="email"]:focus,
  input[type="password"]:focus {
    border-color: #facc15;
    box-shadow: 0 0 6px rgba(250, 204, 21, 0.3);
    outline: none;
  }

  .submit-button {
    width: 100%;
    background-color: #facc15;
    border: none;
    padding: 12px;
    font-size: 16px;
    font-weight: bold;
    color: #000;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .submit-button:hover {
    background-color: #ffd633;
    transform: translateY(-2px);
  }
</style>

<div class="container">
  <div class="header">ユーザー登録</div>

  <% if @user.errors.any? %>
    <div style="background-color: #f8d7da; color: #721c24; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
      <strong>入力エラーがあります：</strong>
      <ul style="margin-top: 10px;">
        <% @user.errors.full_messages.each do |message| %>
          <li>・<%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :name, placeholder: "ユーザー名を入力" %>
    </div>

    <div class="form-group">
      <%= form.email_field :email, placeholder: "メールアドレスを入力" %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, placeholder: "パスワードを入力" %>
    </div>

    <div class="form-group">
      <%= form.submit "新規登録", class: "submit-button" %>
    </div>
  <% end %>
</div>
