<style>
  body {
    background-color: #d3d3d3;
    font-family: sans-serif;
  }

  .container {
    width: 100%;
    max-width: 400px;
    margin: 50px auto;
    background-color: transparent;
    text-align: center;
  }

  .header {
    background-color: #a0ded9;
    padding: 15px;
    font-size: 20px;
    font-weight: bold;
    color: #333;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  input[type="text"],
  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border: none;
    border-radius: 4px;
    background-color: #fff;
    box-shadow: 0 0 3px rgba(0,0,0,0.1);
  }

  .submit-button {
    background-color: white;
    border: 1px solid black;
    padding: 10px 20px;
    cursor: pointer;
    font-weight: bold;
  }
</style>

<div class="container">
  <div class="header">ユーザー登録</div>

  <%= form_with model: @user, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :name, placeholder: "ユーザー名入力欄" %>
    </div>

    <div class="form-group">
      <%= form.email_field :email, placeholder: "メールアドレス入力欄" %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, placeholder: "パスワード入力欄" %>
    </div>

    <div class="form-group">
      <%= form.submit "新規登録", class: "submit-button" %>
    </div>
  <% end %>
</div>
